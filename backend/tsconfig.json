{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2017",
      "lib": ["es2017", "dom"],
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "strictPropertyInitialization": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  